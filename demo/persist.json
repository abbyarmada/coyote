{
	"Class" : "coyote.batch.Job",
	"Job" : {
		"Name" : "Persist",

		"PersistentContext" : {
			"MyString" : "nylon",
			"WorkDir" : "[#$wrkdir#][#$FS#]",
			"filename" : "MyData-[#$YYYY#][#$MM#][#$DD#].csv",
			"filename": "ARROW_[#$MM#][#$DD#][#$YYYY#].csv",
			"workfile": "[#$wrkdir#][#$FS#][#$filename#]",
			"archive": "[#$wrkdir#][#$FS#]arrow[#$FS#]processed[#$FS#][#$filename#]"
		},
	
		"Reader" : {
			"class" : "CSVReader",
			"source" : "file://demo/users.csv",
			"header" : true
		},

		"Writer" : {
			"class" : "FlatFileWriter",
			"target" : "file://users.txt",
			"fields" : {
				"Role" : { "start" : 0, "length" : 6 },
				"FirstName" : { "start" : 7, "length" : 11 },
				"LastName" : { "start" : 19, "length" : 16 },
				"MiddleInitial" : { "start" : 36, "length" : 1 }
			}    
		}
	}

}
