{
	"Class" : "coyote.batch.Job",
	"Job" : {
		"Name" : "Simple",
		
		"Reader" : {
			"class" : "CSVReader",
			"source" : "[#$app.home#]/demo/users.csv",
			"header" : true
		},

		"Validate": {
			"Value": { "field" : "Role", "Values" : "USER, ADMIN, GUEST", "Description": "Must be a valid value" },
			"NotEmpty": { "field" : "Location", "Description": "Cannot be empty" },
			"Distinct": { "field" : "asset_tag",  "desc" : "Asset tag must be unique"  }

		},

		"Writer" : {
			"class" : "FlatFileWriter",
			"target" : "users.txt",
			"fields" : {
				"Role" : { "start" : 0, "length" : 6 },
				"FirstName" : { "start" : 7, "length" : 11 },
				"LastName" : { "start" : 19, "length" : 16 },
				"MiddleInitial" : { "start" : 36, "length" : 1 }
			}    
		}
	}

}
